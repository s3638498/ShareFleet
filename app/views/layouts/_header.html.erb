 <header id="header" id="home">
	<div class="container">
		<div class="row align-items-center justify-content-between d-flex">
	      <div id="logo">
	        <%= link_to image_tag("logo.png", alt: "logo"), root_path %> 
	      </div>
	      <nav id="nav-menu-container">
	        <ul class="nav-menu">
	          
	          <% if logged_in? %>
	          	<% if administrator? %>
	          		<li><%= link_to "All customers", controller: "users", action: "index" %></li>
	          		<li><%= link_to "Add vehicle", controller: "vehicles", action: "new" %></li>
	          	<% else %>
	          		<li><%= link_to "Account", edit_user_path(current_user) %></li>
	          	<% end %>
	          	<li><%= link_to "Logout", login_path, method: :delete%></li>
	          <% else %>
	          <li><%= link_to "Sign Up", signup_path %></li>
	          <li><%= link_to "Login", login_path%></li>
	          <% end %>
	        </ul>
	      </nav>	
		</div>
	</div>
</header>

	
