<div class="alert alert-primary" role="alert" style="margin-top:30px;">
  <h2>All Customers</h2>
</h2>
</div>

<table id="datatable" class="cell-border row-border order-column hover stripe compact">
  <thead>
    <tr>
      <th>Id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>D.O.B</th>
      <th>Email</th>
      <th>Contact Number</th>
      <th>Address</th>
      <th>Driver Licence No.</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.date_of_birth %></td>
      <td><%= user.email %></td>
      <td><%= user.contact_number %></td>
      <td><%= user.address %></td>
      <td><%= user.driver_licence %></td>
    </tr>
    <% end %>
  </tbody>
</table>
