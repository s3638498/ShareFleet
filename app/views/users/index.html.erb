<div class="container-fluid col-md-10">
    <div class="alert alert-primary" role="alert" style="margin-top:30px;">
		<h2>All Customers</h2></h2>
	</div>
	<div class="list-group">
	    <% if @users.empty? %>
            <h4>No customers in the system</h2>
        <% else %>
            <% @users.each do |user| %>
                <li class="list-group-item">
                    <div class="d-flex w-100 justify-content-md-around">
                        <h7 class="mb-1">Username: <%= user.username %></h7>
                        <h7 class="mb-1">Name: <%= user.first_name %> <%= user.last_name %></h7>
                        <h7 class="mb-1">Email: <%= user.email %></h7>
                    </div>
                    <div class="d-flex w-100 justify-content-md-around">
                        <h7 class="mb-1">DOB: <%= user.date_of_birth %></h7>
                        <h7 class="mb-1">Contact #: <%= user.contact_number %></h7>
                        <h7 class="mb-1">Licence #:<%= user.driver_licence %></h7>
                    </div>
                    <div class="d-flex w-100 justify-content-md-around">
                        <h7 class="mb-1">Address: <%= user.address %></h7>
                    </div>
                    <div class="d-flex w-100 justify-content-md-around">
                        <% if current_user.class.name == "Administrator" && !current_user?(user) && user.locked == false %>
                        <%= form_for(user, url: deactivate_user_path(user)) do |f| %>
                        <%= f.hidden_field :locked, value: true %>
                        <%= f.submit 'Deactivate account', :class => 'btn btn-danger' %>
                        <% end %>
                        <% else %> 
                        <%= form_for(user, url: reactivate_user_path(user)) do |f| %>
                        <%= f.hidden_field :locked, value: false %>
                        <%= f.submit 'Reactivate account', :class => 'btn btn-danger' %>
                        <% end %>
                        <% end %>
                    </div>
                </li>
            <% end %>
        <% end %>
    </div>
</div>