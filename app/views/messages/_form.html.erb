
<div class="field">
  <%= f.label :content %>
  <br/>
  <%= f.text_area :content %>
</div>

<div class="field">
  <%= f.hidden_field :administrator_id, :value => Administrator.first.id %>
</div>

<div class="field">
  <% if (current_user.type == "Administrator") %>
    <%= f.label :enduser_id %>
    <%= f.select :enduser_id, options_for_select(Enduser.all.map{|s|[s.id]}) %>
  <% else %>
    <%= f.hidden_field :enduser_id, :value=> current_user.id %>
  <% end %>
</div>

<div class="field">
  <%= f.hidden_field  :author, :value=> current_user.username %>
</div>

<div class="actions">
  <%= f.submit "Submit", class: "btn btn-primary" %>
</div>
