<div class="field">
  <br>
  <%= f.text_area :content, placeholder: "Enter Message Here", class: "form-control" %>
</div>

<div class="field">
  <%= f.hidden_field :administrator_id, :value => Administrator.first.id %>
</div>

<div class="field">
  <% if (current_user.type == "Administrator") %>
    <%= f.hidden_field :enduser_id, :value=> params[:user_id]%>
  <% else %>
    <%= f.hidden_field :enduser_id, :value=> current_user.id %>
  <% end %>
</div>

<div class="field">
  <%= f.hidden_field  :author, :value=> current_user.username %>
</div>

<div class="actions">
  <%= f.submit "Send Message", class: "btn btn-primary float-right" %>
</div>
