<%= form_for(@location) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
        <div class="form-row">
          <div class="form-group col-md-8">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control', placeholder: "Name of parking location" %>
          </div>
          <div class="form-group col-md-4">
              <%= f.label "Number of spaces" %>
              <%= f.number_field :num_park, class: "form-control" %>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
              <%= f.label :latitude %>
              <%= f.text_field :latitude, class: 'form-control', placeholder: "Latitude" %>
          </div>
          <div class="form-group col-md-6">
              <%= f.label :longitude %>
              <%= f.text_field :longitude, class: "form-control", placeholder: "Longitude" %>
          </div>
        </div>
    <%= f.submit "Add Parking Location", class: "btn btn-primary btn-block" %>
<% end %>